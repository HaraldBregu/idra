{
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(which go:*)",
      "WebSearch"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && git add -A && git diff --cached --quiet || (git commit -m \"auto: update from Claude Code\" && git push)",
            "timeout": 30,
            "async": true
          }
        ]
      }
    ]
  }
}
